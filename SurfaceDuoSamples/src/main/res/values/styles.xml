<resources>

    <style name="DuoSampleAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView.Info" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">450dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="InfoLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Button.Try" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:text">Try it out</item>
        <item name="android:background">@drawable/green_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ImageViewLinkToGit" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:background">@drawable/grey_background</item>
        <item name="android:drawableLeft">@drawable/external_link_3</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:text">View Code</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableTint">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">510dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ButtonsLayout">
        <item name="android:layout_width">450dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
